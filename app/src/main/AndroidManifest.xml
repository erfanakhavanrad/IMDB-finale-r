    package="com.example.imdb">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/imdb"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/imdb"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SearchedMoviesActivity"></activity>
        <activity android:name=".DetailsActivity" />
        <activity android:name=".CreatorActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".SpalshScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EnterMovieInfoActivity" />
        <activity android:name=".RecyclerActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>