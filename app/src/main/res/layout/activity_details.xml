<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".DetailsActivity"
    android:orientation="vertical"
    android:background="@color/DarkGold"
    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <ImageView
        android:id="@+id/imgCover"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:scaleType="centerCrop"
        android:layout_margin="20dp"
        android:src="@mipmap/imdb"
        />
    <TextView
        android:id="@+id/qtxtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="title"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/qtxtRated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="rated"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/qtxtRelease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="release year"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/qtxtRun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="run time"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/qtxtGenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="genre"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/qtxtDirector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="director"
        android:textSize="30sp" />
    <Button
        android:id="@+id/savedb"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save movie details"
        android:textSize="30sp"/>
        </LinearLayout>
    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>